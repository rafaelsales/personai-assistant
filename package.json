{
  "name": "gmail-imap-monitor",
  "version": "1.0.0",
  "description": "Local macOS background service that monitors Gmail IMAP, downloads emails in real-time, and stores them in SQLite",
  "type": "module",
  "main": "src/imap-monitor.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "imap-monitor": "node src/imap-monitor.js",
    "tunnel": "node src/tunnel.js",
    "webhook-server": "node src/webhook-server.js",
    "start": "concurrently -n webhook,tunnel -c cyan,green \"npm:webhook-server\" \"npm:tunnel\"",
    "test": "node --test tests/**/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage tests/**/*.test.js"
  },
  "keywords": [
    "gmail",
    "imap",
    "email",
    "monitor",
    "sqlite",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.0",
    "imap": "^0.8.19",
    "localtunnel": "^2.0.2",
    "mailparser": "^3.7.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
